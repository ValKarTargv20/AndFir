<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndFir.Timer_Page"
             Title="Timer">
    <ContentPage.Content>
        <StackLayout>
            <FlexLayout>
                <Label x:Name="lbl"
                   Text="Valjuta nuppule ja siia"
                   FontSize="Medium"
                       TextColor="Black"
                   BackgroundColor="LightCyan">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
                <Button x:Name="timer_btn"
                    Text="Naita info"
                        BackgroundColor="Cyan"
                    FontSize="Large"
                    Clicked="timer_btn_Clicked">
                </Button>
            </FlexLayout>
            <Button x:Name="tagasi"
                    Text="Tagasi"
                    BackgroundColor="Violet"
                    FontSize="Large"
                    Clicked="tagasi_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>